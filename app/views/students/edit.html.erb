<h1>Edit Current Student</h1>

<% if flash[:my_errors] %>
    <ul>
        <% flash[:my_errors].each do |error|%>
            <li><%= error %></li>
            <% end %>
    </ul>
    <% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>

    <%= f.label :mod %> <br>
    <%= f.text_field :mod %> <br>

    <%= f.submit %>
<% end %>

